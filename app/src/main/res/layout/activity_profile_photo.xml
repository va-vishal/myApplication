<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".MotherTongueActivity">


	<TextView
		android:id="@+id/textViewTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="12dp"
		android:layout_marginTop="54dp"
		android:layout_marginEnd="34dp"
		android:text="Select your"
		android:textColor="@color/primaryColor"
		android:textSize="15sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.062"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textViewTitle1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textViewTitle"
		android:layout_marginStart="15dp"
		android:layout_marginTop="9dp"
		android:text="Profile Photo"
		android:textColor="@color/black"
		android:textSize="26sp"
		android:textStyle="bold" />

	<LinearLayout
		android:id="@+id/text"
		android:layout_width="364dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textViewTitle1"
		android:layout_alignParentStart="true"
		android:layout_marginStart="9dp"
		android:layout_marginTop="4dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewTitle1"
		tools:ignore="MissingConstraints">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:text="Upload your"
			android:textColor="@color/black"
			android:textSize="18sp"
			android:textStyle="bold" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="05dp"
			android:text="Best Profile Photo"
			android:textColor="#4CE252"
			android:textSize="22sp"
			android:textStyle="bold" />

		<TextView
			android:layout_width="51dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="05dp"
			android:text="here!"
			android:textColor="@color/black"
			android:textSize="18sp"
			android:textStyle="bold" />

	</LinearLayout>

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/text"
		android:layout_alignParentStart="true"
		android:layout_marginStart="20dp"
		android:layout_marginTop="8dp"
		android:text="• Upload your Original Photo"
		android:textColor="@color/black"
		android:textSize="16sp"
		android:textStyle="italic"
		app:layout_constraintTop_toBottomOf="@+id/text"
		tools:ignore="MissingConstraints"
		tools:layout_editor_absoluteX="34dp" />

	<TextView
		android:id="@+id/text3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textView2"
		android:layout_alignParentStart="true"
		android:layout_marginStart="18dp"
		android:layout_marginTop="7dp"
		android:text="• If Profile &amp; Account Details are Fake While Verifying we would"
		android:textColor="@color/black"
		android:textSize="14sp"
		android:textStyle="italic"
		app:layout_constraintTop_toBottomOf="@+id/textView2"
		tools:ignore="MissingConstraints"
		tools:layout_editor_absoluteX="34dp" />

	<LinearLayout
		android:id="@+id/text1"
		android:layout_width="334dp"
		android:layout_height="29dp"
		android:layout_below="@+id/text3"
		android:layout_alignParentStart="true"
		android:layout_marginStart="19dp"
		android:layout_marginTop="4dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.453"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text3"
		tools:ignore="MissingConstraints">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" De-Activate "
			android:textColor="#F61606"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Permanently"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="03dp"
			android:text="your Account Permanently."
			android:textColor="@color/black"
			android:textSize="14sp"
			android:textStyle="italic" />

	</LinearLayout>

	<androidx.cardview.widget.CardView
		android:id="@+id/cardView"
		android:layout_width="224dp"
		android:layout_height="237dp"
		android:layout_below="@+id/text1"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="90dp"
		android:layout_marginTop="27dp"
		android:layout_marginEnd="97dp"
		app:cardCornerRadius="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text1"
		app:layout_constraintVertical_bias="0.034">

		<ImageView
			android:id="@+id/plus"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_gravity="center"
			android:src="@drawable/plus"
			android:visibility="visible" />

		<ImageView
			android:id="@+id/imageview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/defaultimage"
			android:visibility="gone" />

	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/safe"
		android:layout_width="374dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cardView"
		android:layout_alignParentStart="true"
		android:layout_marginStart="21dp"
		android:layout_marginTop="17dp"
		android:text="• its completely safe for females.Downloading &amp; Screenshots and Restricted in this App"
		android:textColor="@color/black"
		android:textSize="14sp"
		android:textStyle="italic"
		app:layout_constraintTop_toBottomOf="@+id/cardView"
		tools:ignore="MissingConstraints"
		tools:layout_editor_absoluteX="34dp" />

	<LinearLayout
		android:id="@+id/linearLayout12"
		android:layout_width="98dp"
		android:layout_height="63dp"
		android:layout_below="@+id/safe"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		android:layout_marginTop="180dp"
		android:layout_marginEnd="30dp"
		android:layout_marginBottom="19dp"
		android:orientation="vertical">

		<Button
			android:id="@+id/buttonNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:background="@drawable/rounded_button"
			android:text="NEXT"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />
	</LinearLayout>

</RelativeLayout>
