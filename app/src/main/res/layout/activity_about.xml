<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Profile.AboutActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		</androidx.appcompat.widget.Toolbar>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#FFFFFF"
					android:padding="8dp">

					<Button
						android:id="@+id/backButton"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:background="@drawable/ic_back_arrow" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toEndOf="@id/backButton"
						android:layout_centerVertical="true"
						android:layout_marginStart="16dp"
						android:text="About"
						android:textColor="@color/black"
						android:textSize="24sp"
						android:textStyle="bold" />
				</RelativeLayout>
	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/appBarLayout"
		app:layout_constraintBottom_toBottomOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="16dp"
			android:background="@color/white">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginTop="05dp"
					android:layout_marginBottom="45dp">
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/mail"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Mail"
							android:textSize="20sp"
							android:textColor="@color/black" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="39dp"
						android:layout_marginTop="8dp"
						app:cardBackgroundColor="#b2ff40"
						app:cardElevation="2dp">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:gravity="center_vertical"
								android:padding="02dp"
								android:text="Editable"
								android:textColor="@color/black"
								android:textSize="20sp" />

							<ImageView
								android:layout_width="30dp"
								android:layout_height="30dp"
								android:layout_alignParentTop="true"
								android:layout_alignParentBottom="true"
								android:layout_marginTop="05dp"
								android:layout_marginBottom="05dp"
								android:src="@drawable/edittext" />

						</LinearLayout>
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Name"
						android:textSize="20sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">
					<TextView
						android:id="@+id/gender"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Gender"
						android:textColor="@color/black"
						android:textSize="20sp" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/age"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Age"
						android:textSize="20sp"
						android:textColor="@color/black" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/dob"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Date of Birth"
						android:textSize="20sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/religion"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Religion"
						android:textSize="20sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>


					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/mothertongue"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Mother Tongue"
						android:textSize="20sp"
						android:textColor="@color/black" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/smoking"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Smoking"
						android:textSize="20sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/drinking"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Drinking"
						android:textSize="20sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/personality"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Personality"
						android:textSize="20sp"
						android:textColor="@color/black" />

					</androidx.cardview.widget.CardView>
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">
					<TextView
						android:id="@+id/diet"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Diet"
						android:textSize="20sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">
					<TextView
						android:id="@+id/partnerpreferences"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Partner Preferences"
						android:textSize="20sp"
						android:textColor="@color/black"
						android:visibility="gone" />
					</androidx.cardview.widget.CardView>
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">
						<TextView
							android:id="@+id/height"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Height"
							android:textSize="20sp"
							android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/education"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Education"
							android:textSize="20sp"
							android:textColor="@color/black" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/job"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Job"
							android:textSize="20sp"
							android:textColor="@color/black" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/salary"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Salary"
							android:textSize="20sp"
							android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/maritalstatus"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Marital Status"
							android:textSize="20sp"
							android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/prefgender"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Preferred Gender"
							android:textSize="20sp"
							android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">
						<TextView
							android:id="@+id/descriptionTextView"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Description"
							android:textSize="20sp"
							android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>


					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="15dp"
						android:text="In case we get to know that your profile picture and Account Details are Fake while Verifing, We Would Block Your Account Permanetly."
						android:textSize="18sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						app:cardElevation="2dp"
						android:layout_marginBottom="20dp"
						app:cardBackgroundColor="#b2ff40"
					android:layout_marginTop="15dp">

						<TextView
							android:id="@+id/profile"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="05dp"
							android:layout_marginBottom="05dp"
							android:gravity="center"
							android:padding="16dp"
							android:text="View Profile"
							android:textColor="@color/black"
							android:textSize="20sp"
							android:textStyle="bold" />
					</androidx.cardview.widget.CardView>

		</LinearLayout>


		</LinearLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
