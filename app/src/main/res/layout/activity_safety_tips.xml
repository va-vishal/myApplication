			<TextView
				android:id="@+id/termsTextView13"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Terms"
				android:textColor="#0D0000"
				android:textSize="15sp"
				android:layout_marginBottom="70dp"
