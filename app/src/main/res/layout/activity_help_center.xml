<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	tools:context=".Profile.HelpCenterActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		</androidx.appcompat.widget.Toolbar>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"> <!-- Ensure the vertical alignment is centered -->

			<Button
				android:id="@+id/backButton"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_gravity="start"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/ic_back_arrow" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_gravity="center|center_horizontal"
				android:layout_marginStart="15dp"
				android:layout_marginTop="13dp"
				android:layout_toEndOf="@+id/backButton"
				android:text="Help Center"
				android:textColor="@color/black"
				android:textSize="18sp"
				android:textStyle="bold" />
		</RelativeLayout>

	</com.google.android.material.appbar.AppBarLayout>

	<androidx.cardview.widget.CardView
		android:id="@+id/appsupportlayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		app:cardCornerRadius="08dp"
		app:cardElevation="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_marginStart="15dp"
			android:layout_marginTop="010dp"
			android:src="@drawable/appsupport" />

		<TextView
			android:layout_width="264dp"
			android:layout_height="match_parent"
			android:gravity="start|center_vertical"
			android:text="App support"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<ImageView
			android:layout_width="50dp"
			android:layout_height="30dp"
			android:layout_marginTop="015dp"
			android:src="@drawable/next" />
	</LinearLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/termsandconditionslayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		app:cardCornerRadius="08dp"
		app:cardElevation="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_marginTop="010dp"
			android:layout_marginStart="15dp"
			android:src="@drawable/termsandconditions"/>

		<TextView
			android:layout_width="260dp"
			android:layout_height="match_parent"
			android:gravity="start|center_vertical"
			android:text="Terms&amp;Conditions"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<ImageView
			android:layout_width="50dp"
			android:layout_marginTop="015dp"
			android:layout_height="30dp"
			android:src="@drawable/next" />
	</LinearLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/privacypolicieslayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		app:cardCornerRadius="08dp"
		app:cardElevation="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_marginTop="010dp"
			android:layout_marginStart="15dp"
			android:src="@drawable/privacypolicy"/>

		<TextView
			android:layout_width="261dp"
			android:layout_height="match_parent"
			android:gravity="start|center_vertical"
			android:text="Privacy Policy"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<ImageView
			android:layout_width="50dp"
			android:layout_marginTop="015dp"
			android:layout_height="30dp"
			android:src="@drawable/next" />
	</LinearLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/safteytipslayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		app:cardCornerRadius="08dp"
		app:cardElevation="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_marginTop="010dp"
			android:layout_marginStart="15dp"
			android:src="@drawable/safetytips"/>

		<TextView
			android:layout_width="261dp"
			android:layout_height="match_parent"
			android:gravity="start|center_vertical"
			android:text="Saftey Tips"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<ImageView
			android:layout_width="50dp"
			android:layout_marginTop="015dp"
			android:layout_height="30dp"
			android:src="@drawable/next" />
	</LinearLayout>
	</androidx.cardview.widget.CardView>
	<androidx.cardview.widget.CardView
		android:id="@+id/deleteaccountlayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		app:cardCornerRadius="08dp"
		app:cardElevation="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_marginTop="010dp"
			android:layout_marginStart="15dp"
			android:src="@drawable/deleteaccount"/>

		<TextView
			android:layout_width="260dp"
			android:layout_height="match_parent"
			android:gravity="start|center_vertical"
			android:text="Delete Account"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<ImageView
			android:layout_width="50dp"
			android:layout_marginTop="015dp"
			android:layout_height="30dp"
			android:src="@drawable/next" />
	</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>