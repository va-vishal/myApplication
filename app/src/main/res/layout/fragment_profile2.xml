<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Fragments.ProfileFragment"
	android:gravity="center">
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<androidx.cardview.widget.CardView
			android:layout_width="283dp"
			android:layout_height="283dp"
			android:layout_margin="16dp"
			app:cardCornerRadius="160dp"
			app:cardElevation="4dp">

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/profileimagep"
				android:layout_width="270dp"
				android:layout_height="270dp"
				android:layout_margin="6dp"
				android:layout_marginTop="06dp"
				android:src="@drawable/defaultimage"
				app:civ_border_color="@color/borderColor"
				app:civ_border_width="2dp" />

		</androidx.cardview.widget.CardView>


		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="02dp"
			android:layout_marginBottom="02dp"
			android:gravity="center"
			android:text="Username"
			android:textSize="24sp"
			android:padding="02dp"
			android:textColor="@color/black"
			android:textStyle="bold" />

		<androidx.cardview.widget.CardView
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="10dp"
			android:layout_marginTop="05dp"
			app:cardCornerRadius="8dp"
			app:cardElevation="4dp"
			>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<Button
					android:id="@+id/getpremium"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:paddingStart="2dp"
					android:paddingEnd="10dp"
					android:text="Get Premium"
					android:textSize="15sp"
					android:textStyle="bold" />

				<ImageView
					android:layout_width="20dp"
					android:layout_height="22dp"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:layout_marginStart="124dp"
					android:layout_marginTop="12dp"
					android:layout_marginEnd="12dp"
					android:src="@drawable/diamond" />
			</RelativeLayout>

		</androidx.cardview.widget.CardView>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="center"
			android:orientation="horizontal"
			android:padding="0dp">

			<androidx.cardview.widget.CardView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="02dp"
				android:layout_marginBottom="02dp"
				app:cardCornerRadius="8dp"
				app:cardElevation="4dp">

				<LinearLayout
					android:id="@+id/like"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="10dp">

					<TextView
						android:id="@+id/nooflike"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="0"
						android:textColor="@color/black"
						android:textSize="15sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Likes"
						android:textColor="@color/black"
						android:textSize="14sp" />
				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="02dp"
				android:layout_marginBottom="02dp"
				app:cardCornerRadius="8dp"
				app:cardElevation="4dp">

				<LinearLayout
					android:id="@+id/visit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="10dp">

					<TextView
						android:id="@+id/noofvisits"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="0"
						android:textColor="@color/black"
						android:textSize="15sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Visits"
						android:textColor="@color/black"
						android:textSize="14sp" />
				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				app:cardCornerRadius="8dp"
				app:cardElevation="4dp" />

		</LinearLayout>

		<androidx.cardview.widget.CardView
			android:id="@+id/editImageCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			app:cardCornerRadius="08dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:orientation="horizontal"
				android:padding="10dp">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_marginStart="15dp"
					android:src="@drawable/crop" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="start|center_vertical"
					android:text="Edit Image"
					android:textSize="20sp"
					android:textColor="@color/black" />

				<ImageView
					android:layout_width="39dp"
					android:layout_height="40dp"
					android:src="@drawable/next" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:id="@+id/preferencesCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			app:cardCornerRadius="08dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:orientation="horizontal"
				android:padding="10dp">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_marginStart="15dp"
					android:src="@drawable/adjustment" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="start|center_vertical"
					android:text="Preference"
					android:textSize="20sp"
					android:textColor="@color/black" />

				<ImageView
					android:layout_width="39dp"
					android:layout_height="40dp"
					android:src="@drawable/next" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:id="@+id/matchedProfilesCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			app:cardCornerRadius="08dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:orientation="horizontal"
				android:padding="10dp">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_marginStart="15dp"
					android:src="@drawable/matched" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="start|center_vertical"
					android:text="Matched Profiles"
					android:textColor="@color/black"
					android:textSize="20sp" />

				<ImageView
					android:layout_width="39dp"
					android:layout_height="40dp"
					android:src="@drawable/next" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:id="@+id/recentPassedCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			app:cardCornerRadius="08dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:orientation="horizontal"
				android:padding="10dp">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_marginStart="15dp"
					android:src="@drawable/arrows" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="start|center_vertical"
					android:text="Recent Passes"
					android:textSize="20sp"
					android:textColor="@color/black" />

				<ImageView
					android:layout_width="39dp"
					android:layout_height="40dp"
					android:src="@drawable/next" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>



		<androidx.cardview.widget.CardView
			android:id="@+id/aboutCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			app:cardCornerRadius="08dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:orientation="horizontal"
				android:padding="10dp">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_marginStart="15dp"
					android:src="@drawable/point" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="start|center_vertical"
					android:text="About"
					android:textSize="20sp"
					android:textColor="@color/black" />

				<ImageView
					android:layout_width="39dp"
					android:layout_height="40dp"
					android:src="@drawable/next" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/helpCenterCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			app:cardCornerRadius="08dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:orientation="horizontal"
				android:padding="10dp">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_marginStart="15dp"
					android:src="@drawable/helpdesk" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="start|center_vertical"
					android:text="Help Center"
					android:textSize="20sp"
					android:textColor="@color/black" />

				<ImageView
					android:layout_width="39dp"
					android:layout_height="40dp"
					android:src="@drawable/next" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/safetyTipsCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			android:layout_marginBottom="15dp"
			app:cardCornerRadius="08dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:orientation="horizontal"
				android:padding="10dp">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_marginStart="15dp"
					android:src="@drawable/shield" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="start|center_vertical"
					android:text="Safety Tips"
					android:textSize="20sp"
					android:textColor="@color/black" />

				<ImageView
					android:layout_width="39dp"
					android:layout_height="40dp"
					android:src="@drawable/next" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_marginBottom="100dp">
		<androidx.cardview.widget.CardView
			android:id="@+id/logoutCard"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="80dp"
			app:cardCornerRadius="12dp"
			app:cardElevation="4dp"
			android:padding="8dp">

			<Button
				android:id="@+id/logout"
				android:layout_width="126dp"
				android:layout_height="50dp"
				android:background="@drawable/rounded_button"
				android:text="Logout"
				android:textColor="@color/black"
				android:textSize="20sp"
				android:textStyle="bold" />

		</androidx.cardview.widget.CardView>
</LinearLayout>

	</LinearLayout>
	</ScrollView>
</FrameLayout>
