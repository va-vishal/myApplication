<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp">

	<LinearLayout
		android:layout_width="200dp"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="8dp"
			android:padding="010dp"
			android:layout_marginBottom="05dp"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			android:layout_gravity="start"
			app:cardBackgroundColor="@android:color/white"
			app:cardElevation="4dp">
		<LinearLayout
			android:id="@+id/image_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/background_image_l"
			android:orientation="vertical"
			android:paddingTop="8dp">

			<com.makeramen.roundedimageview.RoundedImageView
				android:id="@+id/image_added"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:padding="3dp"
				android:src="@drawable/defaultimage"
				app:riv_corner_radius="8dp"
				app:shapeAppearanceOverlay="@style/CustomShapeAppearance" />

			<TextView
				android:id="@+id/timestamp2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_margin="2dp"
				android:text="12:45 pm"
				android:textColor="@color/black"
				android:textSize="12sp"
				android:textStyle="bold" />
		</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:cardCornerRadius="8dp"
			android:padding="05dp"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			android:layout_gravity="start"
			app:cardBackgroundColor="@android:color/white"
			app:cardElevation="4dp">
		<LinearLayout
			android:id="@+id/textMsg_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start"
			android:layout_margin="2dp"
			android:orientation="vertical"
			android:background="@drawable/background_image_l"
			android:padding="8dp">

			<TextView
				android:id="@+id/show_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="02dp"
				android:layout_alignParentEnd="true"
				android:layout_toEndOf="@+id/timestamp"
				android:paddingEnd="2dp"
				android:text="bagunara "
				android:textColor="@android:color/black"
				android:textSize="20sp" />
			<TextView
				android:id="@+id/timestamp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_gravity="start|bottom"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="02dp"
				android:text="12:45 pm"
				android:textColor="@android:color/black"
				android:textSize="12sp"
				android:textStyle="bold" />

		</LinearLayout>
		</androidx.cardview.widget.CardView>
		<TextView
			android:id="@+id/txt_seen"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textSize="0dp" />
	</LinearLayout>


</RelativeLayout>
